<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/relativelaydirections"
        android:clickable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardcaravatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp">
            <ImageView
                android:id="@+id/imageviewavatardriver"
                android:src="@drawable/bus"
                android:scaleType="centerCrop"
                android:layout_width="90dp"
                android:layout_height="80dp"></ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_toRightOf="@id/cardcaravatar"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewdrivernamelastname"
                android:textSize="20dp"
                android:singleLine="true"
                android:fontFamily="@font/gilroymedium"
                android:textColor="@color/black"
                android:text="Sho`pir brat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:singleLine="true"
                android:id="@+id/textviewdriverdirections"
                android:fontFamily="@font/gilroymedium"
                android:textColor="@color/black"
                android:text="Qayerdan Qayerga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:id="@+id/textviewdriverprice"
                android:fontFamily="@font/gilroymedium"
                android:textColor="#FF9800"
                android:text="3000 UZS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:paddingVertical="5dp"
            android:background="@drawable/buttonyellow"
            android:paddingHorizontal="8dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textviewdriverraiting"
                android:textColor="@color/white"
                android:text="4.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/baseline_favorite_24"
                android:layout_width="20dp"
                android:layout_height="20dp"></ImageView>
        </LinearLayout>




    </RelativeLayout>

</androidx.cardview.widget.CardView>